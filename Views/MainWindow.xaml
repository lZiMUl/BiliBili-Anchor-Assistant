<Window x:Class="com.lZiMUl.BiliBili_Anchor_Assistant.ViewModels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="250" Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/DefaultStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Frame Panel.ZIndex="0" Source="./Pages/ToolBox.xaml" />
        <StackPanel Panel.ZIndex="1" Margin="0 15 0 0" >
            <TextBlock x:Name="CodeTips" Style="{StaticResource TextBlockStyle}" />
            <TextBox x:Name="Code" Style="{StaticResource TextBoxStyle}" Height="35" />
            <Button x:Name="Activate" Click="ActivateEvent" Style="{StaticResource ButtonStyle}" Background="Orange" Width="200" Height="35" />
            <Button x:Name="BuyActivateCode" Click="BuyActivateCodeEvent" Style="{StaticResource ButtonStyle}" Width="200" Height="35" />
            <Button x:Name="Exit" Click="ExitEvent" Style="{StaticResource ButtonStyle}" Width="200" Height="35" />
        </StackPanel>
    </Grid>
</Window>