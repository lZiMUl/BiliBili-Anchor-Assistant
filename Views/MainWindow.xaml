<Window x:Class="BiliBili_Anchor_Assistant.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BiliBili Anchor Assistant (By lZiMUl)" Width="430" Height="90"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource TextBlock}">Room ID: </TextBlock>
            <TextBox Name="RoomId" Width="100" Height="30" Style="{StaticResource TextBox}" />
            <Button Click="ConnectButton" Width="70" Height="30" Background="MediumSpringGreen"
                    Style="{StaticResource ButtonStyle}">
                Connect
            </Button>
            <Button Click="SongManager" Width="100" Height="30" Background="Tan" Style="{StaticResource ButtonStyle}">Song Manager</Button>
        </StackPanel>
    </Grid>
</Window>