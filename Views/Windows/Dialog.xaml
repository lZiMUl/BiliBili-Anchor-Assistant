<Window x:Class="com.lZiMUl.BiliBili_Anchor_Assistant.ViewModels.Windows.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="150" Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/DefaultStyle.xaml" />
                <ResourceDictionary Source="/Resources/Styles/Dialog.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="Message" Grid.Row="1" TextWrapping="Wrap" />
        <Grid Grid.Row="2" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button x:Name="ImmediateRestartButton" Grid.Column="0" Margin="0,0,5,0"
                    Click="ImmediateRestartButtonEvent" />
            <Button x:Name="LaterRestartButton" Grid.Column="1" Click="LaterRestartButtonEvent" />
        </Grid>
    </Grid>
</Window>